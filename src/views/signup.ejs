<%- layout('layouts/main.ejs') -%>

            <div class="container mb-4">
                <div class="row">
                    <div class="col-md-5">
                        <div class="card">
                            <div class="card-body">
                                <h1>Signup</h1>
                                <form action="/login/signup" method="post">
                                    <div class="form-group mb-2">
                                        <input type="text" name="username" id="" placeholder="Nombre de usuario"
                                            class="form-control" required>
                                    </div>
                                    <div class="form-group mb-2">
                                        <input type="password" name="password" id="password" placeholder="Contraseña"
                                            class="form-control" required>
                                    </div>
                                    <div class="form-group mb-2">
                                        <input type="password" name="confirm-password" id="confirmPass"
                                            placeholder="Confirme contraseña" class="form-control" required>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="alert alert-danger" id="pswrdMatchMsg" hidden>Las contraseñas no
                                            coinciden</div>
                                    </div>
                                    <%- include('partials/_citySelector') -%>
                                        <div class="form-group mb-3">
                                            <label for="role">Cargo</label>
                                            <select name="role" id="" class="form-select">
                                                <option value="cashier">Cajero</option>
                                                <option value="administrator">Admininistrador</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-block" id="submitBtn"
                                            disabled>Registrarse</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="../js/checkPassword.js"></script>